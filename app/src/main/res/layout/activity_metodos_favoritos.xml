<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context=".ui.ui.metodos.ActivityMetodosFavoritos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnRegresarF"
            android:layout_width="@dimen/btn_regresar_width"
            android:layout_height="@dimen/btn_regresar_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="45dp"
            android:background="@drawable/regresar_xxxdpi_06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:text="@string/favoritos"
            android:textAlignment="center"
            android:textColor="@color/gris_oscuro"
            android:textSize="23sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/layout_redondeado_con_color"
        android:backgroundTint="@color/azul"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/layout_redondeado_con_color"
        android:backgroundTint="@color/azul"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/layout_redondeado_con_color"
        android:backgroundTint="@color/azul"></LinearLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/simbolo_xxxdpi_06" />


</LinearLayout>