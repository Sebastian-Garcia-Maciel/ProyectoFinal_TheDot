<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context=".Inicio1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            android:background="@color/azul"
             />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_weight="2"
            android:background="@color/azul"
            app:srcCompat="@drawable/logo2_xxdpi_05" />

        <ImageButton
            android:id="@+id/btnConfiguracion"
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            android:backgroundTint="@color/azul"
             />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/hola"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/gris_oscuro"
        android:textSize="40sp"
        android:translationY="-30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:translationY="-40dp"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/boton_mi_perfil"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="52dp"
        android:background="@drawable/perfil__02" />
    <ImageButton
        android:id="@+id/boton_metodos"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:background="@drawable/metodos__02" />
    <ImageButton
        android:id="@+id/boton_journal"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:background="@drawable/journal__02" />
    <ImageButton
        android:id="@+id/boton_about"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:background="@drawable/info_xxxdpi_06" />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:translationY="-40dp"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/frase"
            ></LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/regresar_xxxdpi_06" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/avanzar_xxxdpi_06" />
    </RelativeLayout>
</LinearLayout>