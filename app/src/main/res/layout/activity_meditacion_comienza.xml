<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blanco"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ui.metodos.ActivityMeditacionComienza">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp">


        <ImageButton
            android:id="@+id/btnRegresarC"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="35dp"
            android:background="@drawable/regresar_xxxdpi_06"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meditacion"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="@font/agne_regular"
            android:textStyle="bold"
            android:textSize="23sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/descripcion_meditacion"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="45dp"
            android:background="@drawable/layout_redondeado_con_color"
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_height="450dp">
        </LinearLayout>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:src="@drawable/uno_xdpi_04"/>
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/btnPlay"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/ic_baseline_play_circle_filled_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@mipmap/fondo_like" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/like_meditacion_comienza"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/icono_like" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>