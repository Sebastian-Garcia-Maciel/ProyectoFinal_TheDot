<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context=".ui.ui.metodos.respiracion.Respiracion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btnRegresarMI"
                android:layout_width="51dp"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/btn_regresar_margin_start"
                android:layout_marginEnd="35dp"
                android:background="@drawable/regresar_xxxdpi_06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"
                android:text="RespiraciÃ³n"
                android:fontFamily="@font/agne_regular"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/gris_oscuro"
                android:textSize="@dimen/tamanio_titulos" />


        </LinearLayout>

        android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="35dp"
            android:background="@drawable/regresar_xxxdpi_06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:text="Mis\nrecordatorios"
            android:fontFamily="@font/agne_regular"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/gris_oscuro"
            android:textSize="23sp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:text="@string/respiracion_description"
        android:textAlignment="center"
        android:padding="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:src="@drawable/simbolo_xxxdpi_06"
            />
    </LinearLayout>
    <ImageButton
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:background="@drawable/avanzar_xxxdpi_06" />
</LinearLayout>