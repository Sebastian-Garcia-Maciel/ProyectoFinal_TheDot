<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.ui.inicioSesion.ReestablecerContrasenia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/boton_regresar_inicia_sesion"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="45dp"
            android:background="@drawable/regresar_xxxdpi_06" />

        <ImageView
            android:layout_width="@dimen/simbolo_height_width"
            android:layout_height="@dimen/simbolo_height_width"
            android:layout_gravity="center"
            app:srcCompat="@drawable/simbolo_xxxdpi_06" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="60dp"
        android:text="recupera"
        android:includeFontPadding="false"
        android:fontFamily="@font/gt_america_regular"
        android:textColor="@color/gris_oscuro"
        android:textSize="70sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/playfair_display_wght"
        android:includeFontPadding="false"
        android:text="tu"
        android:translationY="-25dp"
        android:textColor="@color/gris_oscuro"
        android:textSize="70sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="60dp"
        android:text="cuenta"
        android:translationY="-60dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/playfair_display_italic_wght"
        android:textColor="@color/gris_oscuro"
        android:textSize="70sp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
            android:id="@+id/et_correo_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_claro"
            android:ems="10"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
            android:theme="@style/EditTextHint"
            android:inputType="textEmailAddress"
            android:hint="correo electrónico"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/gt_america_regular"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_restablecer"
            android:text="Restablecer Contraseña"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/azul_claro"
            android:fontFamily="@font/gt_america_regular"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:cornerRadius="55dp" />



    </LinearLayout>

</LinearLayout>