<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context=".IniciaSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/boton_regresar_inicia_sesion"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="52dp"
            android:background="@drawable/regresar_xxxdpi_06" />

        <ImageView
            android:layout_width="216dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/simbolo_xxxdpi_06" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="75dp"
        android:text="inicia\nsesiÃ³n"
        android:textColor="@color/gris_oscuro"
        android:textSize="80sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/azul_claro"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/correo"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_claro"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/contrasenia"
            android:textAlignment="center" />



        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="250dp"
            android:layout_height="70dp"
            />

        <Button
            android:id="@+id/boton_inicia_sesion"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/azul"
            android:inputType="textEmailAddress"
            android:text="@string/inicia_sesion"
            android:textSize="20sp"
            app:cornerRadius="50dp" />
    </LinearLayout>


</LinearLayout>