<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ui.menu.ActivityConfiguracion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/boton_regresar_de_configuracion"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="25dp"
            android:background="@drawable/regresar_xxxdpi_06"
            android:contentDescription="Boton regresar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:text="@string/configuracion"
            android:textAlignment="center"
            android:textColor="@color/gris_oscuro"
            android:textSize="23sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/azul_claro"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:layout_marginBottom="30dp"
            android:hint="/ nombre"
            android:autofillHints="" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/azul_claro"
            android:hint="/ fecha de nacimiento" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/azul_claro"
            android:hint="/ ubicación" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:backgroundTint="@color/azul_claro"
            android:layout_marginBottom="30dp"
            android:hint="/ ocupación"
            android:importantForAutofill="no" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:backgroundTint="@color/azul_claro"
            android:layout_marginBottom="40dp"
            android:hint="/ cambiar contraseña" />
    </LinearLayout>
    <Button
        android:id="@+id/boton_cerrar_sesion"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul"
        android:text="@string/cerrar_sesion"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:cornerRadius="50dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center"
        app:srcCompat="@drawable/simbolo_xxxdpi_06" />



</LinearLayout>