<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context=".ui.ui.miPerfil.MiPerfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRegresarPerfil"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_marginStart="@dimen/btn_regresar_margin_start"
                android:layout_marginEnd="30dp"
                android:layout_weight="0"
                android:background="@drawable/regresar_xxxdpi_06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textAlignment="center"
                android:textColor="@color/gris_oscuro"
                android:fontFamily="@font/agne_regular"
                android:textStyle="bold"
                android:textSize="@dimen/tamanio_titulos" />
        </LinearLayout>
        <ImageView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/trazado4_xxxdpi_06" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@color/blanco"
            app:shapeAppearanceOverlay="@style/imagen_circular" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/simbolo_xxxdpi_06" />
        <Button
            android:id="@+id/btnCambiarPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            app:cornerRadius="65dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etNamePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre perfil"
            android:textAlignment="center"
            android:textColor="@color/gris_oscuro"
            android:fontFamily="@font/agne_regular"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/descripcionPerfil"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gt_america_regular"
            android:text="- Aqui va tu descripciÃ³n."
            android:inputType="textMultiLine|textNoSuggestions"
            android:textAlignment="center"
            android:background="@drawable/background_transparent"
            android:textColor="@color/black"
            android:textSize="@dimen/tamanio_texto"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRecordatorios"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:backgroundTint="@color/lavanda"
        android:background="@drawable/fondo_boton_ovalado">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:background="@drawable/borde_ovalado">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordatorios"
                android:fontFamily="@font/playfair_display_wght"
                android:textColor="@color/white"
                android:textSize="@dimen/tamanio_texto_botones"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:layout_width="160dp"
            android:layout_height="215dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/trazado3_xxxdpi_06" />

        <GridLayout
            android:layout_width="329dp"
            android:layout_height="205dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">



            <LinearLayout
                android:id="@+id/btnAfirmaciones"
                android:layout_width="165dp"
                android:layout_height="85dp"
                android:layout_rowSpan="1"
                android:gravity="center"
                android:layout_gravity="start|top"
                android:backgroundTint="@color/anaranjado_claro"
                android:background="@drawable/fondo_boton_ovalado">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:background="@drawable/borde_ovalado">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afirmaciones"
                        android:fontFamily="@font/playfair_display_wght"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tamanio_texto_botones"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnAgenda"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_rowSpan="2"
                android:gravity="center"
                android:backgroundTint="@color/azul_claro"
                android:background="@drawable/fondo_boton_ovalado">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/borde_ovalado">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agenda"
                        android:fontFamily="@font/playfair_display_wght"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tamanio_texto_botones"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMetas"
                android:layout_width="165dp"
                android:layout_height="95dp"
                android:layout_rowSpan="1"
                android:gravity="center"
                android:layout_gravity="start|bottom"
                android:backgroundTint="@color/verde_azulado"
                android:background="@drawable/fondo_boton_ovalado">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@drawable/borde_ovalado">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metas"
                        android:fontFamily="@font/playfair_display_wght"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tamanio_texto_botones"/>
                </LinearLayout>
            </LinearLayout>


        </GridLayout>
    </RelativeLayout>

</LinearLayout>