<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context=".ui.ui.miPerfil.recordatorios.ActivityRecordatorios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btnRegresarMI"
            android:layout_width="@dimen/btn_width"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/btn_regresar_margin_start"
            android:layout_marginEnd="20dp"
            android:background="@drawable/regresar_xxxdpi_06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:text="Mis\nrecordatorios"
            android:fontFamily="@font/agne_regular"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/gris_oscuro"
            android:textSize="@dimen/tamanio_titulos" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gt_america_regular"
            android:text="@string/recordatorio_description"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/tamanio_texto"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:orientation="vertical">

        <GridView
            android:id="@+id/grid_view_recordatorios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1" />

    </LinearLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnNuevoRecordatorio"
                android:layout_width="@dimen/signo_height_width"
                android:layout_height="@dimen/signo_height_width"
                android:background="@drawable/signo__01" />
        </LinearLayout>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/trazado5_xxxdpi_06" />

    </RelativeLayout>
</LinearLayout>